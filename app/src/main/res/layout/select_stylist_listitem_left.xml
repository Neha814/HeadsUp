<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:weightSum="10"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_weight="4">
        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="100dp"
            android:src="@drawable/picture"
            android:padding="2dp"
            android:scaleType="fitXY"

            android:background="@drawable/transparent_box_for_pic"
            android:layout_height="100dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_weight="6">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:drawablePadding="4dp"
            android:text="Neha Bhardwaj"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
           android:drawableLeft="@drawable/user__name"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:drawablePadding="4dp"
            android:text="Matrix sec-22, Chandigarh"
            android:gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/location"/>

        <TextView
            android:id="@+id/stylist_type"
            android:layout_width="wrap_content"
            android:drawablePadding="4dp"
            android:text="Hair cutting, MakeUp"
            android:gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/technique"/>

        <TextView
            android:id="@+id/work_exp"
            android:layout_width="wrap_content"
            android:drawablePadding="4dp"
            android:text="Work Experience : 10 years"
            android:gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
           />
        </LinearLayout>



</LinearLayout>